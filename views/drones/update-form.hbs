<h2>Update the drone</h2>


<form action="/drones/{{this.droneDetails._id}}/edit" method="post">
    <label for="name">Nombre</label>
    <input type="text" name="name" value="{{this.droneDetails.name}}">

    <br>

    <label for="propellers">Hélices</label>
    <input type="text" name="propellers" value="{{this.droneDetails.propellers}}">

    <br>

    <label for="maxSpeed">Velocidad Máxima</label>
    <input type="text" name="maxSpeed" value="{{this.droneDetails.maxSpeed}}">

    <br>

    <button>Editar</button>
